{
  "compilerOptions": {
    "outDir": "./dist/types",
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
 