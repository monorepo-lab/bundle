{
  "packages": [
    "./"
  ],
  "version": "1.3.0",
  "npmClient": "yarn",
  "command": {
    "version": {
      "changelog": true,
      "conventionalCommits": true,
      "message": "chore: publish",
      "push": false
    },
    "publish": {
      "allowBranch": "master",
      "preDistTag": "next",
      "ignoreScripts": true,
      "verifyAccess": false,
      "verifyRegistry": false
    }
  },
  "ignoreChanges": [
    "*.md",
    "**/__tests__/**"
  ]
}
